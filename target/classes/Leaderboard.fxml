   </HBox>

    <Label text="Leaderboard:">
      <font>
         <Font size="40.0" />
      </font></Label>

    <TableView fx:id="leaderboardTable" prefHeight="619.0" prefWidth="1440.0">
        <columns>
            <TableColumn fx:id="userColumn" prefWidth="308.0416431427002" text="User" />
            <TableColumn fx:id="scoreColumn" prefWidth="179.70449829101562" text="Score" />
            <TableColumn fx:id="rapColumn" prefWidth="953.7955322265625" text="Transcript" />
        </columns>
    </TableView>

</VBox>
