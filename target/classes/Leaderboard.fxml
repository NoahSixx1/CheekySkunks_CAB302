<VBox prefHeight="1000.0" prefWidth="1500.0" spacing="10" style="-fx-border-color: #5F3985; -fx-border-width: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment1.LeaderboardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <HBox alignment="CENTER" prefHeight="119.0" prefWidth="637.0">
      <children>
         <VBox alignment="CENTER" prefHeight="239.0" prefWidth="1142.0" spacing="30.0">
            <children>
               <Label text="Skunks Rap">
                  <font>
                     <Font name="System Bold" size="70.0" />
                  </font>
               </Label>
               <Label text="Leaderboard Page">
                  <font>
                     <Font name="System Bold" size="100.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <AnchorPane prefHeight="143.0" prefWidth="110.0">
            <children>
               <ImageView fitHeight="232.0" fitWidth="270.0" layoutX="8.0" layoutY="4.0">
                  <image>
                     <Image url="@skunklogo.jpg" />
                  </image>
               </ImageView>
            </children>
         </AnchorPane>
      </children>
   </HBox>
   <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="602.0">
      <children>
         <Button fx:id="leaderboardExitButton" mnemonicParsing="false" onAction="#goToMainPage" prefHeight="77.0" prefWidth="300.0" style="-fx-background-color: #5F3985;" text="Exit" textFill="WHITE">
