<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assignment1.LeaderboardController"
      prefHeight="400.0" prefWidth="600.0"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Leaderboard" />

    <TableView fx:id="leaderboardTable" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="userColumn" text="User" prefWidth="200"/>
            <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
            <TableColumn fx:id="rapColumn" text="Transcript" prefWidth="300"/>
        </columns>
    </TableView>

</VBox>
