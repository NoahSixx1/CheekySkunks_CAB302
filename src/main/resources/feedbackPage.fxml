<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment1.FeedbackPage" spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <!-- TextArea to display the transcript text -->
    <TextArea fx:id="feedbackTextArea" wrapText="true" prefHeight="400" prefWidth="600" editable="false"/>

    <!-- Button to get feedback -->
    <Button fx:id="getFeedbackButton" text="Get Feedback" onAction="#handleGetFeedbackButton"/>

    <!-- Button to allow editing the text -->
    <Button fx:id="editTextButton" text="Edit Text" onAction="#handleEditTextButton"/>

</VBox>
